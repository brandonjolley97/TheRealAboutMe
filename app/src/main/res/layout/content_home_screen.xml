<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home_screen" tools:context=".HomeScreen"
    android:background="#225aa4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Me"
        android:id="@+id/aboutMeTitleText"
        android:layout_alignParentTop="true"
        android:width="300dp"
        android:height="75dp"
        android:textSize="65dp"
        android:layout_centerHorizontal="true"
        android:gravity="center|center_horizontal" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/selfieImage"
        android:cropToPadding="false"
        android:baselineAlignBottom="false"
        android:background="@drawable/Fixed_Selfie"
        android:foregroundGravity="center_horizontal"
        android:adjustViewBounds="false"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/aboutMeTitleText"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soccerImage"
        android:visibility="gone"
        android:background="@drawable/Soccer_Ball_Image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/booksImage"
        android:visibility="gone"
        android:background="@drawable/Books_Image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/borderlandsImage"
        android:visibility="gone"
        android:background="@drawable/Borderlands_Image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/woodshopImage"
        android:visibility="gone"
        android:background="@drawable/Woodshop_Image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schoolImage"
        android:visibility="gone"
        android:background="@drawable/School_Image" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/changeSlideButton"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/selfieImage"
        android:layout_centerHorizontal="true"
        android:height="100dp"
        android:width="200dp"
        android:textSize="30dp" />

</RelativeLayout>
